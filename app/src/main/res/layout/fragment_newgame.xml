<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnDate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Select a Date" />
        <Button
            android:id="@+id/btnTime"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Select a Time" />
        <EditText
            android:id="@+id/gameLocation"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Location"/>
        <EditText
            android:id="@+id/gameLeague"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="League" />
        <Spinner
            android:id="@+id/gamePos"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"/>
        <EditText
            android:id="@+id/gamePay"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Pay" />
        <EditText
            android:id="@+id/gameRef2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Other Ref" />
        <EditText
            android:id="@+id/gameRef3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Other Ref" />
        <EditText
            android:id="@+id/gameRef4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Other Ref" />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Submit" />
        <TextView
            android:id="@+id/txtTest"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp" />
    </LinearLayout>
</ScrollView>